          th(span="col") Method
          th(span="col") Recent delay
      tbody
        each entry in delay_ranking
          tr
            td= entry.country
            td= entry.method
            td
              - titlestr = `Current: ${entry.cur_avg}days, Total: ${entry.tot_avg}days`;

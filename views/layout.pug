doctype html
html
  head
    title Tracker
    link(rel="stylesheet" href="/stylesheets/bootstrap.min.css")
    link(rel="stylesheet", href="/stylesheets/style.css")
  body
    .container
      nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
        a.navbar-brand(href="/") Tracker
        button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation")
          span.navbar-toggler-icon
        
        #navbarContent.collapse.navbar-collapse
          ul.navbar-nav.mr-auto
            if role != "guest"
              li.nav-item
                a.nav-link(href="/mypage") Dashboard
              li.nav-item
                a.nav-link(href="/mypage/undelivered") 配送中
              li.nav-item
                a.nav-link(href="/mypage/delivered") 到着
              li.nav-item.dropdown
                a#countryDropdown.nav-link.dropdown-toggle(href="#", role="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false") 国
                .dropdown-menu(aria-labelledby="countryDropdown")
                  a.dropdown-item(href="/country") ランク
                  a.dropdown-item(href="/country/update") 設定変更
                  a.dropdown-item(href="/country/bulk_update") 一括設定変更
                  a.dropdown-item(href="/country/recalculate") 再計算
              li.nav-item.dropdown
                a#toolsDropdown.nav-link.dropdown-toggle(href="#", role="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false") ツール
                .dropdown-menu(aria-labelledby="toolsDropdown")
                  a.dropdown-item(href="/mypage/log") Runtime Log
                  a.dropdown-item(href="/mypage/maintenance") Maintenance
                  a.dropdown-item(href="/mypage/sreporting") Reporting
                  a.dropdown-item(href="/mypage/stuck") Stuck
          if role == "guest"
            .form-inline.my-2.my-lg-0
              a.btn.btn-outline-info.my-2.my-sm-0(href="/login") Login
          else
            form.form-inline.my-2.my-lg-0(action="/logout", method="post")
              button.btn.btn-outline-info.my-2.my-sm-0(type="submit") Logout
      block content
    script(src="/javascripts/jquery-3.4.1.slim.min.js")
    script(src="/javascripts/bootstrap.bundle.min.js")
